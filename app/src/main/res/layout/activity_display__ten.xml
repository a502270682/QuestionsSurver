<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_display__ten"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.questionssurver.Display_Ten">
    <Button
        android:text="next"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/btn_ten"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textSize="30dp"
        android:onClick="btn_one_onclick"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="30dp"
        android:text="10.Do you always play more time than you prepared when you play online games?"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/RdGroup"

        android:weightSum="1"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp"
        android:layout_above="@+id/btn_ten">
        <RadioButton
            android:layout_width="198dp"
            android:layout_height="73dp"
            android:id="@+id/Rd_Ten_A"
            android:text="often"
            android:textSize="30dp"
            android:layout_weight="0.18" />
        <RadioButton
            android:layout_width="191dp"
            android:layout_height="73dp"
            android:id="@+id/Rd_Ten_B"
            android:textSize="30dp"
            android:text="sometimes"
            android:layout_weight="0.31" />
        <RadioButton
            android:layout_width="186dp"
            android:layout_height="73dp"
            android:id="@+id/Rd_Ten_C"
            android:textSize="30dp"
            android:text="almost not"
            android:layout_weight="0.34" />

        <RadioButton
            android:layout_width="166dp"
            android:layout_height="73dp"
            android:id="@+id/Rd_Ten_D"
            android:textSize="30dp"
            android:text="never"
            android:layout_weight="0.28" />

    </RadioGroup>
</RelativeLayout>

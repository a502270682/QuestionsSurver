<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_display__four"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.questionssurver.Display_Four">
    <Button
        android:text="continue"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/btn_four"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textSize="30dp"
        android:onClick="btn_one_onclick"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="25dp"
        android:text="4.Playing online game is a good way to relax,to learn,to rich your mind.Do you think so?"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/RdGroup"

        android:weightSum="1"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp"
        android:layout_above="@+id/btn_four">
        <RadioButton
            android:layout_width="198dp"
            android:layout_height="73dp"
            android:id="@+id/Rd_Four_A"
            android:textSize="30dp"
            android:layout_weight="0.18"
            android:text="absolutely" />
        <RadioButton
            android:layout_width="191dp"
            android:layout_height="73dp"
            android:id="@+id/Rd_Four_B"
            android:textSize="30dp"
            android:text="agree with"
            android:layout_weight="0.31" />
        <RadioButton
            android:layout_width="186dp"
            android:layout_height="73dp"
            android:id="@+id/Rd_Four_C"
            android:textSize="30dp"
            android:text="maybe"
            android:layout_weight="0.34" />

        <RadioButton
            android:layout_width="230dp"
            android:layout_height="73dp"
            android:id="@+id/Rd_Four_D"
            android:textSize="30dp"
            android:text="of course not"
            android:layout_weight="0.50" />

    </RadioGroup>
</RelativeLayout>
